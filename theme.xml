<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.0 0.0</pos>
        <logoAlignment>center</logoAlignment>         
        <size>1 1</size>
        <logoScale>1.025</logoScale>
        <zIndex>3</zIndex>          
        <logoSize>0.98 0.98</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>    
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0 0.555</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/SuperMario256.ttf</fontPath>
	     <fontSize>0.009</fontSize>
         <zIndex>7</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/SuperMario256.ttf</fontPath>
         <fontSize>0.03</fontSize>     
         <pos>1.22 0.95</pos>      
         <textColor>000000</textColor>
         <iconColor>000000</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/SuperMario256.ttf</fontPath>
         <fontSize>0.01</fontSize>     
         <pos>0.03 0.985</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>     
   
<!--
System Gamelist
--> 

   <view name="basic">
      <textlist name="gamelist">      
         <selectorColor>1c1c1c00</selectorColor>                     
         <pos>0.02 0.15</pos>
         <size>0.96 0.82</size>
         <selectedColor>000000</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/SuperMario256.ttf</fontPath>
         <fontSize>0.023</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
         <zIndex>6</zIndex>                          
      </textlist>
   </view> 
  
  
   <view name="detailed,video">
      <textlist name="gamelist">      
         <selectorColor>1c1c1c00</selectorColor>                     
         <pos>0.02 0.15</pos>
         <size>0.96 0.43</size>
         <selectedColor>000000</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/SuperMario256.ttf</fontPath>
